<launch>
    <arg name="name" default="OurCar" />
 
   <node pkg="octomap_server" type="octomap_server_node" name="$(arg name)_octomap_server">
		<param name="resolution" value="1.0" />
		
<!-- fixed map frame (set to 'map' if SLAM or localization running!) -->
		<param name="frame_id" type="string" value="world" />
		
<!-- maximum range to integrate (speedup!) -->
		<param name="sensor_model/max_range" value="30.0" />
		
<!-- data source to integrate (PointCloud2) -->
		<remap from="cloud_in" to="/realsense/depth/pointcloud" /> 
		<remap from="/octomap_binary" to="/realsense/octomap_binary" />  
		<remap from="/octomap_full" to="/realsense/octomap_full" />   
		<param name="base_frame_id" type="string" value="$(arg name)/true_body" />

<!-- min and max height of occupied cells to be consider in the final map -->
    		<param name="occupancy_min_z" value="0.5" />
		<param name="occupancy_max_z" type="double" value="2.0" /> 
    	

		<!-- when building map, set to false to speed up!!! -->
		<param name = "latch" value = "false" /> 


  </node>


</launch>
